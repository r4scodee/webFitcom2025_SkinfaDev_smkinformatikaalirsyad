<IfModule mod_rewrite.c>
    RewriteEngine On

    # Base path opsional (hapus kalau project ada di root domain)
    RewriteBase /webFitcom2025_SkinfaDev_smkinformatikaalirsyad/

    # Jangan rewrite kalau file/folder asli ada
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # Semua request non-file => masuk ke index.php
    RewriteRule ^(.*)$ index.php?url=$1 [QSA,L]

    RewriteRule ^(app|config|vendor|logs|tests)/ - [F,L]
</IfModule>

# Disable directory listing
Options -Indexes

# Proteksi file sensitif
<FilesMatch "(^\.|composer\.(json|lock)|package\.json|yarn\.lock|phpunit\.xml|\.env)">
    Require all denied
</FilesMatch>

# Blokir PHP di folder uploads (regex fleksibel)
<FilesMatch "uploads/.*\.php$">
    Require all denied
</FilesMatch>

# Optimasi cache (hanya kalau mod_expires ada)
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType image/svg+xml "access plus 1 month"
</IfModule>

# Kompresi Gzip (hanya kalau mod_deflate ada)
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain text/html text/xml text/css application/javascript application/json
</IfModule>

ErrorDocument 404 /error/404.php