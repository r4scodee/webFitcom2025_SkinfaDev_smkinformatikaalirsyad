# Aktifkan rewrite engine
RewriteEngine On
RewriteBase /webFitcom2025_SkinfaDev_smkinformatikaalirsyad/

# Jangan langsung akses file/directory yang ada
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Semua request non-file => index.php + parameter url
RewriteRule ^(.*)$ index.php?url=$1 [QSA,L]

# Proteksi folder app agar tidak bisa diakses langsung via URL
<IfModule mod_rewrite.c>
    RewriteRule ^app/ - [F,L]
</IfModule>
